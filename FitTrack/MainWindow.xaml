<Window x:Class="FitTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Left"/>
        
        <TextBlock Text="Username:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="UserName" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="PassWord" Width="70" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel/>
        <StackPanel>
        <Label Width="225" Height="100" Content="FitTrack" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" FontFamily="Arial" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </StackPanel>
    

</Window>
