<Window x:Class="FitTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Border Background="LightGray" Grid.Row="1"/>
        <Border Background="LightGray" Grid.Row="0"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Crimson">
            <Label Content="FitTrack" FontSize="150"/>

        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="70" Margin="0,0,0,0"/>
            <TextBlock Text="Password:" />
            <PasswordBox x:Name="PasswordBox" Width="70"/>
            <Button Name="SignIn" Content="Sign in" Margin="0,5,0,5" Click="SignIn_Click"/>
            <Button Name="Register" Content="Register" Click="Register_Click"/>
        </StackPanel>
    </Grid>



</Window>
