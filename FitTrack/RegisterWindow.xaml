<Window x:Class="FitTrack.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrack"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="250" Width="200">
    <Grid>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,5">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameTextBox" Width="70" HorizontalAlignment="Left" />
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Width="70" HorizontalAlignment="Left"/>
            <TextBlock Text="Confirm Password:"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Width="70" HorizontalAlignment="Left"/>
            <TextBlock Text="Country:"/>
            <ComboBox x:Name="CountryComboBox" Width="70" Margin="0,0,0,5" Text="Countries" HorizontalAlignment="Left">
            </ComboBox>
            <Button Name="RegisterButton" Content="Register" Click="Register_Click" Width="70" HorizontalAlignment="Left"/>

        </StackPanel>
    </Grid>
</Window>
